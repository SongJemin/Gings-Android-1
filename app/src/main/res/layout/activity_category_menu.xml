                        android:layout_centerHorizontal="true"
                        android:background="#ffffff"
                        android:src="@drawable/ic_face_black_24dp" />

                    <TextView
                        android:layout_marginTop="6.5dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/iv_category_menu_sample1_icon"
                        android:layout_centerHorizontal="true"
                        android:background="#ffffff"
                        android:letterSpacing="-0.01"
                        android:lineSpacingExtra="0sp"
                        android:text="샘플"
                        android:textColor="#999999"
                        android:textSize="12sp" />
                </RelativeLayout>
            </RelativeLayout>

            <View
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:background="#e2e8ed"/>

            //샘플2
            <RelativeLayout
                android:id="@+id/rl_btn_category_menu_sample2"
                android:background="#ffffff"
                android:layout_weight="1"
                android:layout_width="wrap_content"
                android:layout_height="match_parent">

                <RelativeLayout
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:layout_centerInParent="true"
                    android:background="#ffffff">

                    <ImageView
                        android:id="@+id/iv_category_menu_sample2_icon"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_alignParentTop="true"
                        android:layout_centerHorizontal="true"
                        android:background="#ffffff"
                        android:src="@drawable/ic_face_black_24dp" />

                    <TextView
                        android:layout_marginTop="6.5dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/iv_category_menu_sample2_icon"
                        android:layout_centerHorizontal="true"
                        android:background="#ffffff"
                        android:letterSpacing="-0.01"
                        android:lineSpacingExtra="0sp"
                        android:text="샘플"
                        android:textColor="#999999"
                        android:textSize="12sp" />
                </RelativeLayout>
            </RelativeLayout>

            <View
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:background="#e2e8ed"/>

            //샘플3
            <RelativeLayout
                android:id="@+id/rl_btn_category_menu_sample3"
                android:background="#ffffff"
                android:layout_weight="1"
                android:layout_width="wrap_content"
                android:layout_height="match_parent">

                <RelativeLayout
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:layout_centerInParent="true"
                    android:background="#ffffff">

                    <ImageView
                        android:id="@+id/iv_category_menu_sample3_icon"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_alignParentTop="true"
                        android:layout_centerHorizontal="true"
                        android:background="#ffffff"
                        android:src="@drawable/ic_face_black_24dp" />

                    <TextView
                        android:layout_marginTop="6.5dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/iv_category_menu_sample3_icon"
                        android:layout_centerHorizontal="true"
                        android:background="#ffffff"
                        android:letterSpacing="-0.01"
                        android:lineSpacingExtra="0sp"
                        android:text="샘플"
                        android:textColor="#999999"
                        android:textSize="12sp" />
                </RelativeLayout>
            </RelativeLayout>
        </LinearLayout> //2nd line

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#e2e8ed"
            ></View>

        //3rd line
        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="95dp"
            android:background="#ffffff"
            android:orientation="horizontal">

            //샘플4
            <RelativeLayout
                android:id="@+id/rl_btn_category_menu_sample4"
                android:background="#ffffff"
                android:layout_weight="1"
                android:layout_width="wrap_content"
                android:layout_height="match_parent">

                <RelativeLayout
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:layout_centerInParent="true"
                    android:background="#ffffff">

                    <ImageView
                        android:id="@+id/iv_category_menu_sample4_icon"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_alignParentTop="true"
                        android:layout_centerHorizontal="true"
                        android:background="#ffffff"
                        android:src="@drawable/ic_face_black_24dp" />

                    <TextView
                        android:layout_marginTop="6.5dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/iv_category_menu_sample4_icon"
                        android:layout_centerHorizontal="true"
                        android:background="#ffffff"
                        android:letterSpacing="-0.01"
                        android:lineSpacingExtra="0sp"
                        android:text="샘플"
                        android:textColor="#999999"
                        android:textSize="12sp" />
                </RelativeLayout>
            </RelativeLayout>

            <View
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:background="#e2e8ed"/>

            //샘플5
            <RelativeLayout
                android:id="@+id/rl_btn_category_menu_sample5"
                android:background="#ffffff"
                android:layout_weight="1"
                android:layout_width="wrap_content"
                android:layout_height="match_parent">

                <RelativeLayout
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:layout_centerInParent="true"
                    android:background="#ffffff">

                    <ImageView
                        android:id="@+id/iv_category_menu_sample5_icon"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_alignParentTop="true"
                        android:layout_centerHorizontal="true"
                        android:background="#ffffff"
                        android:src="@drawable/ic_face_black_24dp" />

                    <TextView
                        android:layout_marginTop="6.5dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/iv_category_menu_sample5_icon"
                        android:layout_centerHorizontal="true"
                        android:background="#ffffff"
                        android:letterSpacing="-0.01"
                        android:lineSpacingExtra="0sp"
                        android:text="샘플"
                        android:textColor="#999999"
                        android:textSize="12sp" />
                </RelativeLayout>
            </RelativeLayout>

            <View
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:background="#e2e8ed"/>

            //샘플6

            <RelativeLayout
                android:id="@+id/rl_btn_category_menu_sample6"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="#ffffff">

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:background="#ffffff">

                    <ImageView
                        android:id="@+id/iv_category_menu_sample6_icon"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_alignParentTop="true"
                        android:layout_centerHorizontal="true"
                        android:background="#ffffff"
                        android:src="@drawable/ic_face_black_24dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/iv_category_menu_sample6_icon"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="6.5dp"
                        android:background="#ffffff"
                        android:letterSpacing="-0.01"
                        android:lineSpacingExtra="0sp"
                        android:text="샘플"
                        android:textColor="#999999"
                        android:textSize="12sp" />
                </RelativeLayout>
            </RelativeLayout>

        </LinearLayout> //3rd line

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#e2e8ed"
            ></View>


    </LinearLayout>//메뉴바


</RelativeLayout>

