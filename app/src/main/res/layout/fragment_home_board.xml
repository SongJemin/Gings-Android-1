<?xml version="1.0" encoding="utf-8"?>
<LinearLayout

    android:background="#000000"
    android:orientation="vertical"
    android:layout_height="match_parent" android:layout_width="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android" xmlns:tools="http://schemas.android.com/tools">

    <RelativeLayout
        android:background="#FFFFFF"
        android:layout_width="match_parent" android:layout_height="56dp"
        android:paddingStart="14.5dp" android:paddingRight="7dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:textColor="#222222"
            android:letterSpacing="-0.01"
            android:lineSpacingExtra="0sp"
            android:text="GINGS"
            android:layout_alignParentStart="true" android:layout_centerVertical="true"/>

        <ImageView
            android:layout_toLeftOf="@+id/iv_btn_home_board_category"
            android:id="@+id/iv_btn_home_board_search"
            android:layout_centerVertical="true"
            android:layout_width="wrap_content" android:layout_height="wrap_content"
            android:src="@drawable/ic_close_black_24dp"/>
        <ImageView
            android:id="@+id/iv_btn_home_board_category"
            android:layout_centerVertical="true"
            android:layout_width="wrap_content" android:layout_height="wrap_content"
            android:src="@drawable/ic_close_black_24dp"
            android:layout_alignParentEnd="true" />

    </RelativeLayout>

    <RelativeLayout
        android:background="#FFFFFF"
        android:layout_width="match_parent" android:layout_height="48dp">
        <ImageView
            android:id="@+id/iv_home_board_profile_img"
            android:layout_width="32dp" android:layout_height="32dp"
            android:layout_marginEnd="16dp" android:layout_marginStart="17.5dp"
            android:src="#b0caea"
            android:layout_alignParentStart="true" android:layout_centerVertical="true"/>
        <TextView

            android:layout_marginStart="65.5dp"
            android:layout_toEndOf="@+id/iv_home_board_profile_img"

            android:background="@null"
            android:id="@+id/tv_home_board_write_board"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:letterSpacing="-0.01"
            android:lineSpacingExtra="2sp"
            android:hint="공유하고싶은 소식을 입력하세요"
            android:layout_alignParentStart="true" android:layout_centerVertical="true"/>
    </RelativeLayout>


    <LinearLayout
        android:id="@+id/ll_home_board_board_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#FFFFFF">

        <android.support.v7.widget.RecyclerView
            android:id="@+id/rv_item_board_list"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"></android.support.v7.widget.RecyclerView>
    </LinearLayout>


</LinearLayout>

