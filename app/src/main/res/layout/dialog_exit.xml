<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="270dp"
    android:layout_height="326dp"
    android:orientation="vertical"
    android:background="@color/transparent"
    >

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="202dp"
        android:src="@drawable/img_bye"
        android:background="@drawable/box_alert_top"
        />
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="78.8dp"
        android:background="#ffffff"
        >
        <TextView
            android:id="@+id/exit_dialog_content_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="정말 종료하시겠습니까?"
            android:textSize="13sp"
            android:textColor="#000000"
            android:layout_centerInParent="true"
            />
        <View
            android:id="@+id/exit_dialog_below_view"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#707070"
            android:layout_alignParentBottom="true"
            />



    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:layout_below="@+id/exit_dialog_below_view"
        android:orientation="horizontal"
        android:background="@drawable/box_alert"
        android:gravity="center"
        >
        <TextView
            android:id="@+id/exit_dialog_cancel_tv"
            android:layout_width="134.5dp"
            android:layout_height="match_parent"
            android:background="@color/transparent"
            android:text="취소"
            android:textColor="#707070"
            android:textSize="16sp"
            android:gravity="center"
            />
        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="#707070"
            />
        <TextView
            android:id="@+id/exit_dialog_exit_tv"
            android:layout_width="134.5dp"
            android:layout_height="match_parent"
            android:background="@color/transparent"
            android:text="종료"
            android:textColor="#c45c55"
            android:textSize="16sp"
            android:gravity="center"
            />

    </LinearLayout>

</LinearLayout>