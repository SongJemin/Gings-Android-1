<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/rl_lounge_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f9f9f9">

    <RelativeLayout
        android:id="@+id/rl_top_bar_lounge_innobatorclub"
        android:layout_width="match_parent"
        android:layout_height="72dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:background="#ffffff">

        <Button
            android:id="@+id/btn_lounge_back"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginLeft="10dp"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:background="@drawable/ic_keyboard_arrow_left_black_24dp" />

        <TextView
            android:id="@+id/rl_top_bar_lounge_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:gravity="center_horizontal"
            android:letterSpacing="0.05"
            android:lineSpacingExtra="5sp"
            android:text="INNOVATOR CLUB"
            android:textColor="#000000"
            android:textSize="15sp"
            android:textStyle="bold" />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rl_lounge_image"
        android:layout_width="match_parent"
        android:layout_height="220dp"
        android:layout_below="@id/rl_top_bar_lounge_innobatorclub">

        <ImageView
            android:id="@+id/rl_iv_lounge_backImg"
            android:layout_width="match_parent"
            android:layout_height="220dp"
            android:background="@drawable/rounge"
            android:src="@drawable/gradient"
            />

        <RelativeLayout
            android:id="@+id/rl_lounge_introuce_introudeuce_bar"
            android:layout_width="40dp"
            android:layout_height="30dp"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="182.7dp">

            <TextView
                android:id="@+id/tv_lounge_introduce"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:letterSpacing="-0.01"
                android:lineSpacingExtra="5sp"
                android:text="소개"
                android:textColor="#000000"
                android:textSize="15sp"
                android:textStyle="bold" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rl_lounge_introuce_event_bar"
            android:layout_width="40dp"
            android:layout_height="30dp"
            android:layout_marginLeft="80dp"
            android:layout_marginTop="182.7dp">

            <TextView
                android:id="@+id/tv_lounge_calendar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:letterSpacing="-0.01"
                android:lineSpacingExtra="5sp"
                android:text="일정"
                android:textColor="#000000"
                android:textSize="15sp"
                />
        </RelativeLayout>
    </RelativeLayout>


    //소개

    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/ll_lounge_introduce_introduce_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/rl_lounge_image"
        android:orientation="vertical"
        android:visibility="visible">

        <RelativeLayout
            android:id="@+id/rl_lounge_introducetext"
            android:layout_width="match_parent"
            android:layout_height="92dp"
            android:background="#f9f9f9">

            <TextView
                android:id="@+id/tv_lounge_intro_stop"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="31.7dp"
                android:lineSpacingExtra="7sp"
                android:text="ABOUT"
                android:textColor="#040404"
                android:textSize="15sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tv_lounge_intro_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30dp"
                android:text="INNOVATOR CLUB"
                android:layout_marginTop="50.7dp"
                android:textColor="#040404"
                android:textSize="15sp"
                android:textStyle="bold"
                />


        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@id/rl_lounge_introducetext"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:layout_gravity="center"
            android:background="#ffffff">

            <TextView
                android:id="@+id/tv_rl_lounge_introdata"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="14dp"
                android:layout_marginTop="30dp"
                android:text="이노베이터 클럽은 혁신을 추구하는
창업가, 스타트업 관계자, 개발자, 디자이너 등
창업에 뜻이 있는 사람들이 모인 커뮤니티입니다."
                android:textColor="#000000" />

            <Button
                android:id="@+id/btn_lounge_introduce_signup"
                android:visibility="visible"
                android:layout_width="164dp"
                android:layout_height="48dp"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:layout_marginBottom="50dp"
                android:background="@drawable/bt_join_signup"
                android:textColor="#ffffff"
                android:textStyle="bold" />
            <Button
                android:id="@+id/btn_lounge_introduce_signup_waiting"
                android:visibility="invisible"
                android:layout_width="164dp"
                android:layout_height="48dp"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:layout_marginBottom="50dp"
                android:background="@drawable/bt_join_signup_waiting"
                android:textColor="#ffffff"
                android:textStyle="bold" />
        </RelativeLayout>
    </LinearLayout>

    //일정

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/ll_lounge_introduce_introduce_schedule"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="292dp"
        android:orientation="vertical"
        android:visibility="gone">

        <RelativeLayout
            android:id="@+id/rl_lounge_schedule_text"
            android:layout_width="match_parent"
            android:layout_height="57.7dp"
            android:layout_below="@id/rl_lounge_image"
            android:background="#f9f9f9">

            <TextView
                android:id="@+id/tv_lounge_calendar_month"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="20.7dp"
                android:lineSpacingExtra="7sp"
                android:text="April"
                android:textColor="#040404"
                android:textSize="15sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tv_lounge_calendar_year"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="70dp"
                android:layout_marginTop="20.7dp"
                android:lineSpacingExtra="7sp"
                android:text="2019"
                android:textColor="#040404"
                android:textSize="15sp"
                android:textStyle="bold" />

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rl_lounge_event_calendar"
            android:layout_width="328dp"
            android:layout_height="217dp"
            android:layout_below="@id/rl_lounge_schedule_text"
            android:layout_gravity="center"
            android:background="#ffffff">
            <com.prolificinteractive.materialcalendarview.MaterialCalendarView
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:id="@+id/calendarView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:mcv_showOtherDates="all"
                app:mcv_selectionColor="#00F"
                />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rl_lounge_event_text"
            android:layout_width="match_parent"
            android:layout_height="57.7dp"
            android:layout_below="@id/rl_lounge_event_calendar"
            android:background="#f9f9f9">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="20.7dp"
                android:lineSpacingExtra="7sp"
                android:text="EVENT"
                android:textColor="#040404"
                android:textSize="15sp"
                android:textStyle="bold" />

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rl_lounge_event_image"
            android:layout_width="match_parent"
            android:layout_height="170dp"
            android:layout_below="@id/rl_lounge_event_text">

            <android.support.v7.widget.RecyclerView
                android:id="@+id/rv_lounge_frag_lounge_event_list"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                >
            </android.support.v7.widget.RecyclerView>

        </RelativeLayout>
    </LinearLayout>

</RelativeLayout>