<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:layout_marginTop="9dp"
    android:layout_marginLeft="4.5dp"
    android:layout_marginRight="4.5dp"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="216dp"
    android:background="#ffffff">

    <de.hdodenhof.circleimageview.CircleImageView
       android:layout_centerInParent="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="8dp"
        android:id="@+id/iv_item_directory_searching_profile_img"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:scaleType="centerCrop"
        android:src="@drawable/img_sample"/>
<RelativeLayout
    android:layout_centerHorizontal="true"
    android:layout_below="@id/iv_item_directory_searching_profile_img"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">
    <TextView
        android:layout_marginTop="15dp"
        android:id="@+id/tv_item_directory_searching_profile_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:letterSpacing="-0.01"
        android:lineSpacingExtra="4sp"
        android:textSize="15sp"
        android:textColor="#222222"
        android:text="이충엽" />


    <View
        android:id="@+id/v_item_directory_searching_v"
        android:layout_toRightOf="@+id/tv_item_directory_searching_profile_name"
        android:layout_marginTop="19.5dp"
        android:layout_width="1dp"
        android:layout_height="15dp"
        android:layout_marginLeft="8dp"
        android:background="#999999" />

    <TextView
        android:layout_toRightOf="@+id/v_item_directory_searching_v"
        android:id="@+id/tv_item_directory_searching_team_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:letterSpacing="-0.01"
        android:lineSpacingExtra="6sp"
        android:textColor="#525252"
        android:textSize="15sp"
        android:layout_marginLeft="8dp"
        android:text="깅스" />
    <TextView
        android:layout_toRightOf="@+id/tv_item_directory_searching_team_name"
        android:id="@+id/tv_item_directory_searching_slash"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:letterSpacing="-0.01"
        android:lineSpacingExtra="6sp"
        android:textSize="15sp"
        android:textColor="#525252"
        android:text="" />
    <TextView
        android:layout_toRightOf="@+id/tv_item_directory_searching_slash"
        android:id="@+id/tv_item_directory_searching_role"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:letterSpacing="-0.01"
        android:lineSpacingExtra="6sp"
        android:textSize="15sp"
        android:textColor="#525252"
        android:text="PM" />
    <TextView
        android:layout_marginLeft="14dp"
        android:layout_marginTop="4dp"
        android:layout_below="@+id/tv_item_directory_searching_profile_name"
        android:id="@+id/tv_item_directory_searching_part"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="10sp"
        android:textColor="#999999"
        android:letterSpacing="-0.01"
        android:lineSpacingExtra="6sp"
        android:text="기획" />
    <TextView
        android:id="@+id/tv_item_directory_searching_slash2"
        android:layout_toRightOf="@id/tv_item_directory_searching_part"
        android:layout_below="@+id/tv_item_directory_searching_profile_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="10dp"
        android:layout_marginTop="4dp"
        android:text=""/>
    <TextView
        android:layout_marginTop="4dp"
        android:id="@+id/tv_item_directory_searching_ablity"
        android:layout_toRightOf="@id/tv_item_directory_searching_slash2"
        android:layout_below="@+id/tv_item_directory_searching_profile_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="10sp"
        android:letterSpacing="-0.01"
        android:lineSpacingExtra="6sp"
        android:textColor="#999999"
        android:text=""/>
    <TextView
        android:id="@+id/tv_item_directory_searching_available_coworker"
        android:layout_marginTop="5dp"
        android:layout_below="@+id/tv_item_directory_searching_team_name"
        android:layout_toRightOf="@+id/tv_item_directory_searching_ablity"
        android:gravity="center"
        android:background="@drawable/box_on"
        android:layout_width="39dp"
        android:layout_height="14dp"
        android:textSize="8sp"
        android:layout_marginLeft="6dp"
        android:textColor="#ffffff"
        android:letterSpacing="-0.01"
        android:lineSpacingExtra="8sp"
        android:text="ON"/>
</RelativeLayout>
</RelativeLayout>