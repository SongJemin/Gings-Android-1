<?xml version="1.0" encoding="utf-8"?>
    <RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/rl_frag_lounge_main_all"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <RelativeLayout
            android:id="@+id/rl_top_bar_lounge"
            android:layout_width="match_parent"
            android:layout_height="72dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:background="#ffffff">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:gravity="center_horizontal"
                android:letterSpacing="0.05"
                android:lineSpacingExtra="5sp"
                android:text="라운지"
                android:textColor="#000000"
                android:textSize="15sp" />

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/iv_rv_item_lounge_image"
            android:layout_width="match_parent"
            android:layout_height="258dp"
            android:layout_below="@+id/rl_top_bar_lounge"
            android:layout_marginTop="8dp"
            android:background="#ffffff">

            <android.support.v7.widget.RecyclerView
                android:id="@+id/rv_lounge_frag_lounge_list"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"></android.support.v7.widget.RecyclerView>

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="99dp"
            android:layout_below="@id/iv_rv_item_lounge_image"
            android:background="#ffffff">

            <TextView
                android:id="@+id/tv_rounge_content"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="17dp"
                android:layout_marginTop="15dp"
                android:gravity="center_horizontal"
                android:lineSpacingExtra="2sp"
                android:text="CLUB"
                android:textColor="#b0caea"
                android:textSize="18sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/tv_rounge_content"
                android:layout_marginLeft="17dp"
                android:layout_marginTop="3dp"
                android:letterSpacing="-0.01"
                android:lineSpacingExtra="7sp"
                android:text="관심 있는 클럽에 가입 해
멤버들과 더욱 긴밀한 교류를 해 보세요."
                android:textColor="#999999"
                android:textSize="13sp" />
        </RelativeLayout>
    </RelativeLayout>
