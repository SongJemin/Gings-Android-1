<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Jemin.Activity.MypageUpdateActivity"
    android:background="#f9f9f9"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        >
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="73dp"
            android:background="#ffffff"
            >

            <TextView
                android:id="@+id/guest_board_write_title_tv"
                android:layout_width="162dp"
                android:layout_height="wrap_content"
                android:text="ㅇㅇㅇ님의 Guest Board"
                android:layout_centerInParent="true"
                android:textSize="15sp"
                android:textStyle="bold"
                android:textColor="#040404"
                />

            <ImageView
                android:layout_width="21dp"
                android:layout_height="21dp"
                android:src="@drawable/back_btn"
                android:layout_centerVertical="true"
                android:layout_marginLeft="10dp"
                />

            <Button
                android:id="@+id/guest_board_write_confirm_btn"
                android:layout_width="28dp"
                android:layout_height="match_parent"
                android:text="완료"
                android:textColor="@color/colorPrimary"
                android:layout_centerVertical="true"
                android:layout_marginRight="24dp"
                android:layout_alignParentRight="true"
                android:background="#ffffff"
                android:textStyle="bold"
                />

        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#e2e8ed"
            />

        <EditText
            android:id="@+id/guest_board_write_content_edit"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#ffffff"
            android:layout_marginTop="32dp"
            android:hint="안부글을 남겨보세요."
            android:gravity="top"
            android:textSize="13sp"
            android:padding="20dp"
            />

    </LinearLayout>


</RelativeLayout>