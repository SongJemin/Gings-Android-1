<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="92dp"
        android:orientation="vertical"
        android:background="#f9f9f9"
        >
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="94.2dp"
            android:orientation="horizontal"
            >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_centerInParent="true"
                android:layout_marginTop="13dp"
                android:layout_marginStart="46dp"
                android:layout_marginEnd="46dp"
                android:layout_marginBottom="11dp"
                >
                <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:layout_weight="1"
                    >
                    <ImageView
                        android:layout_marginTop="2dp"
                        android:layout_centerHorizontal="true"
                        android:layout_width="23dp"
                        android:layout_height="23dp"
                       android:src="@drawable/ic_cowork"
                        android:layout_gravity="center"
                        />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_above="@+id/mypage_intro_collab_layout"
                        android:layout_centerHorizontal="true"
                        android:layout_gravity="center"
                        android:layout_marginBottom="-3dp"
                        android:fontFamily="@font/noto_bold"
                        android:lineHeight="15sp"
                        android:text="협업여부"
                        android:textSize="10sp"
                         />

                    <RelativeLayout
                        android:id="@+id/mypage_intro_collab_layout"
                        android:layout_centerHorizontal="true"
                        android:layout_alignParentBottom="true"
                        android:layout_width="48dp"
                        android:layout_height="26dp"
                        android:layout_gravity="center"
                        android:gravity="center_horizontal"
                        android:background="@drawable/mypage_intro_box_selector"
                        >
                        <TextView
                            android:fontFamily="@font/noto_regular"
                            android:lineHeight="16sp"
                            android:id="@+id/mypage_intro_collab_tv"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:lineSpacingExtra="2sp"
                            android:text="불가능"
                            android:textColor="#ffffff"
                            android:textSize="8sp"
                            android:layout_centerInParent="true"
                            />
                    </RelativeLayout>


                </RelativeLayout>
                <View
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:layout_marginTop="13.5dp"
                    android:layout_marginBottom="12.5dp"
                    android:background="#e2e8ed"
                    />
                <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:layout_weight="1"
                    >

                    <ImageView
                        android:layout_marginTop="5dp"
                        android:layout_width="18dp"
                        android:layout_height="14.1dp"
                        android:layout_alignParentTop="true"
                        android:layout_centerHorizontal="true"
                        android:layout_gravity="center"
                        android:background="@drawable/ic_category" />

                    <TextView
                        android:fontFamily="@font/noto_bold"
                        android:lineHeight="15sp"
                        android:id="@+id/mypage_intro_field_tv"
                        android:layout_centerInParent="true"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="5dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="활동분야"
                        android:textSize="10sp"
                        android:layout_gravity="center"
                        />

                    <RelativeLayout
                        android:id="@+id/mypage_intro_field_layout"
                        android:layout_alignParentBottom="true"
                        android:layout_width="48dp"
                        android:layout_height="26dp"
                        android:layout_gravity="center"
                        android:layout_centerHorizontal="true"
                        android:background="@drawable/box_on"
                        >
                        <TextView
                            android:fontFamily="@font/noto_regular"
                            android:lineHeight="16sp"
                            android:id="@+id/mypage_intro_activity_part"
                            android:layout_centerHorizontal="true"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:lineSpacingExtra="2sp"
                            android:text="통신이 안되어있습니다."
                            android:textColor="#ffffff"
                            android:padding="3dp"
                            android:textSize="8sp"
                            android:layout_centerInParent="true"
                            />
                    </RelativeLayout>

                </RelativeLayout>
                <View
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:layout_marginTop="13.5dp"
                    android:layout_marginBottom="12.5dp"
                    android:background="#e2e8ed"
                    />
                <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:layout_weight="1"
                    >
                    <ImageView
                        android:layout_marginTop="5dp"
                        android:layout_centerHorizontal="true"
                        android:layout_width="15.5dp"
                        android:layout_height="15.5dp"
                        android:background="@drawable/ic_now"
                        android:layout_gravity="center"
                        />

                    <TextView
                        android:fontFamily="@font/noto_bold"
                        android:lineHeight="15sp"
                        android:id="@+id/mypage_intro_status_tv"
                        android:layout_centerInParent="true"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="3dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="업무상태"
                        android:textSize="10sp"
                        android:layout_gravity="center"
                        />

                    <RelativeLayout
                        android:id="@+id/mypage_intro_status_layout"
                        android:layout_alignParentBottom="true"
                        android:layout_centerHorizontal="true"
                        android:layout_width="48dp"
                        android:layout_height="26dp"
                        android:layout_gravity="center"
                        android:gravity="center_horizontal"
                        android:background="@drawable/box_on"
                        >
                        <TextView
                            android:fontFamily="@font/noto_regular"
                            android:lineHeight="16sp"
                            android:id="@+id/mypage_intro_status"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:lineSpacingExtra="2sp"
                            android:text="통신이 안되어있습니다."
                            android:textColor="#ffffff"
                            android:textSize="8sp"
                            android:layout_centerInParent="true"
                            />
                    </RelativeLayout>

                </RelativeLayout>

            </LinearLayout>


        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:background="@drawable/mypage_intro_background"
            >

            <de.hdodenhof.circleimageview.CircleImageView
                android:scaleType="centerCrop"
                android:id="@+id/mypage_board_profile_img"
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:src="@drawable/invalid_name"
                android:layout_marginTop="21dp"
                android:layout_marginLeft="15dp"
                />
            <LinearLayout
                android:id="@+id/mypage_board_all_name_layout"
                android:layout_width="match_parent"
                android:layout_height="35.8dp"
                android:orientation="vertical"
                android:layout_toRightOf="@+id/mypage_board_profile_img"
                android:layout_alignTop="@+id/mypage_board_profile_img"
                >

                <LinearLayout
                    android:id="@+id/mypage_board_name_layout"
                    android:layout_width="match_parent"
                    android:layout_height="18dp"
                    android:orientation="horizontal"

                    >
                    <TextView
                        android:layout_marginTop="-8dp"
                        android:fontFamily="@font/noto_bold"
                        android:lineHeight="16sp"
                        android:letterSpacing="-0.12"
                        android:id="@+id/mypage_board_name_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="이충엽"
                        android:textSize="13sp"
                        android:textStyle="bold"
                        android:layout_marginLeft="8.5dp"
                        android:textColor="#222222"
                        />

                    <View
                        android:id="@+id/mypage_board_view"
                        android:layout_width="1dp"
                        android:layout_height="8dp"
                        android:background="#999999"
                        android:layout_toRightOf="@+id/mypage_board_name_tv"
                        android:layout_gravity="center"
                        android:layout_marginLeft="9.1dp"
                        />

                    <TextView
                        android:layout_marginTop="-5dp"
                        android:fontFamily="@font/noto_regular"
                        android:lineHeight="16sp"
                        android:letterSpacing="-0.1"
                        android:id="@+id/mypage_board_company"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="SWU"
                        android:textSize="12sp"
                        android:layout_toRightOf="@+id/mypage_board_view"
                        android:layout_marginLeft="9.2dp"
                        android:layout_gravity="center"
                        android:textColor="#525252"
                        />
                    <TextView
                        android:layout_marginTop="-5dp"
                        android:fontFamily="@font/noto_regular"
                        android:lineHeight="16sp"
                        android:letterSpacing="-0.1"
                        android:id="@+id/mypage_board_job"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="/DESIGNER"
                        android:textSize="12sp"
                        android:layout_toRightOf="@+id/mypage_board_company"
                        android:layout_gravity="center"
                        android:textColor="#525252"
                        />

                </LinearLayout>
                <TextView
                    android:fontFamily="@font/noto_regular"
                    android:lineHeight="16sp"
                    android:letterSpacing="-0.09"
                    android:id="@+id/mypage_board_datetime_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="2018/12/30    01:16"
                    android:textSize="10sp"
                    android:layout_marginTop="-3dp"
                    android:textColor="#999999"
                    android:layout_marginLeft="8.5dp"
                    android:layout_below="@+id/mypage_board_name_tv"
                    />
            </LinearLayout>

            <ScrollView
                android:layout_below="@+id/mypage_board_all_name_layout"

                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
            <TextView
                android:fontFamily="@font/noto_regular"
                android:lineHeight="22sp"
                android:letterSpacing="-0.13"
                android:id="@+id/mypage_board_content_tv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="안녕하세요! 깅스의 런칭을 기다려온 이충엽입니다. 깅스!"
                android:layout_marginLeft="60dp"
                android:layout_marginRight="38dp"
                android:layout_marginTop="10dp"
                android:textSize="13sp"
                android:textColor="#222222"
                android:layout_marginBottom="16dp"
                />
                    <android.support.v4.view.ViewPager
                        android:id="@+id/my_intro_img_viewPager"
                        android:layout_width="match_parent"
                        android:layout_height="200dp"
                        android:layout_marginBottom="21dp"
                        android:layout_marginTop="5dp"
                        android:clipToPadding="false" />

            </LinearLayout>
            </ScrollView>

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="39.3dp"
            android:layout_marginTop="23dp"
            android:background="#ffffff"
            >
            <TextView
                android:fontFamily="@font/noto_bold"
                android:lineHeight="20sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Guest Board"
                android:textSize="18sp"
                android:textColor="@color/colorPrimary"
                android:layout_marginLeft="30dp"
                android:layout_centerVertical="true"
                />

            <Button
                android:id="@+id/mypage_board_write_btn"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="16dp"
                android:background="@drawable/bt_guestmore" />
        </RelativeLayout>

        <android.support.v7.widget.RecyclerView
            android:id="@+id/mypage_guestboard_recyclerview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="1dp"
            android:background="#ffffff"
            >

        </android.support.v7.widget.RecyclerView>
    </LinearLayout>

</ScrollView>