<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:orientation="vertical"
    android:id="@+id/rl_item_board_list"

    android:paddingTop="4dp"
    android:background="#ffffff"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="71dp">

        <RelativeLayout
            android:id="@+id/rl_item_board_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true">

            <TextView
                android:id="@+id/tv_item_board_category"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                android:layout_marginStart="18.5dp"
                android:letterSpacing="-0.01"
                android:lineSpacingExtra="1sp"
                android:textColor="#b0caea"
                android:textSize="15sp"
                android:text="협업" />

            <View
                android:id="@+id/v_item_board_slash"
                android:layout_toRightOf="@+id/tv_item_board_category"
                android:layout_width="1dp"
                android:layout_height="15.6dp"
                android:layout_centerVertical="true"
                android:layout_marginStart="10dp"
                android:background="#999999" />


            <TextView
                android:layout_toRightOf="@+id/v_item_board_slash"
                android:id="@+id/tv_item_board_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginStart="10dp"
                android:letterSpacing="-0.01"
                android:lineSpacingExtra="1sp"
                android:textColor="#222222"
                android:textSize="15sp"
                android:text="개발 협업할 디자이너 구합니다!" />

        </RelativeLayout>

        <LinearLayout
            android:id="@+id/ll_item_board_tag"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/rl_item_board_title"
            android:layout_marginStart="65dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_item_board_tag1"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:letterSpacing="-0.01"
                android:lineSpacingExtra="12sp"
                android:textColor="#999999"
                android:textSize="10sp"
                android:paddingEnd="15dp"
                android:text="#사업" />

            <TextView
                android:id="@+id/tv_item_board_tag2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:letterSpacing="-0.01"
                android:lineSpacingExtra="12sp"
                android:textColor="#999999"
                android:textSize="10sp"
                android:paddingEnd="15dp"
                android:text="#창업" />

            <TextView
                android:id="@+id/tv_item_board_tag3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:letterSpacing="-0.01"
                android:lineSpacingExtra="12sp"
                android:textColor="#999999"
                android:paddingEnd="15dp"
                android:textSize="10sp"
                android:text="#준비" />

            <TextView
                android:id="@+id/tv_item_board_tag4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:letterSpacing="-0.01"
                android:lineSpacingExtra="12sp"
                android:textColor="#999999"
                android:paddingEnd="15dp"
                android:textSize="10sp"
                android:text="#정보" />

            <TextView
                android:id="@+id/tv_item_board_tag5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:letterSpacing="-0.01"
                android:lineSpacingExtra="12sp"
                android:textColor="#999999"
                android:paddingEnd="15dp"
                android:textSize="10sp"
                android:text="#팁" />


        </LinearLayout>

        <TextView
            android:id="@+id/tv_item_board_time"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="30dp"
            android:layout_below="@id/rl_item_board_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:letterSpacing="-0.01"
            android:lineSpacingExtra="6sp"
            android:textColor="#999999"
            android:textSize="10sp"
            android:text="3시간전" />


    </RelativeLayout>


    <ImageView
        android:id="@+id/iv_item_board_contents_image"
        android:background="#b0caea"
        android:layout_width="match_parent" android:layout_height="280dp" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="65dp"
            android:layout_marginTop="15dp"
            android:layout_marginEnd="65dp"
            android:layout_marginBottom="10dp"
            >

            <TextView
                android:id="@+id/tv_item_board_contents_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="안녕하세요ㅎㅎㅎㅎㅎㅎㅎㅎㅎㅎㅎㅎㅎㅎㅎㅎㅎㅎ오안녕하세요 키이이이 반가워요오안녕하세요 반가워요오안녕하세요 반가워요오안녕하세요 반가워요오안녕하세요 반가워요오안녕하세요 반가워요오안녕하세요 반가워요오안녕하세요 반가워요오안녕하세요 반가워요오"
                android:textColor="#000000" />

            <TextView
                android:id="@+id/tv_item_board_contents_more"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv_item_board_contents_text"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="0dp"
                android:letterSpacing="-0.01"
                android:lineSpacingExtra="6sp"
                android:textColor="#a7a7a7"
                android:textSize="10sp"
                android:text="더보기" />

        </RelativeLayout>




    </RelativeLayout>


    <RelativeLayout
        android:layout_width="match_parent"  android:layout_height="64dp">

        <ImageView
            android:id="@+id/iv_item_board_profile_img"
            android:layout_width="32dp" android:layout_height="32dp"
            android:layout_marginStart="19dp"
            android:src="#b0caea"
            android:layout_alignParentStart="true" android:layout_centerVertical="true"/>

        <TextView
            android:id="@+id/tv_item_board_profile_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:layout_marginStart="63.5dp"
            android:letterSpacing="-0.01"
            android:lineSpacingExtra="4sp"
            android:textColor="#222222"
            android:textSize="12sp"
            android:text="이충엽" />



        <View
            android:layout_width="1dp"
            android:layout_height="7.6dp"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:layout_marginStart="104dp"
            android:background="#999999" />

        <TextView
            android:id="@+id/tv_item_board_profile_team"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:layout_marginStart="117dp"
            android:letterSpacing="-0.01"
            android:lineSpacingExtra="6sp"
            android:textColor="#525252"
            android:textSize="10sp"
            android:text="깅스" />


        <TextView
            android:id="@+id/tv_item_board_profile_slash"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/tv_item_board_profile_team"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="/"/>

        <TextView
            android:id="@+id/tv_item_board_profile_role"
            android:layout_toRightOf="@+id/tv_item_board_profile_slash"
            android:layout_centerVertical="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:letterSpacing="-0.01"
            android:lineSpacingExtra="6sp"
            android:textColor="#525252"
            android:textSize="10sp"
            android:text="PM" />

        <RelativeLayout
            android:id="@+id/rl_item_board_like"
            android:layout_marginStart="180dp"

            android:layout_width="wrap_content" android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            >

            <ImageView
                android:id="@+id/iv_item_board_like"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_thumb_up_black_24dp" />

            <TextView
                android:id="@+id/tv_item_board_like_cnt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="5dp"
                android:layout_toRightOf="@id/iv_item_board_like"
                android:letterSpacing="-0.01"
                android:lineSpacingExtra="12sp"
                android:textColor="#222222"
                android:textSize="10sp"
                android:text="999+" />

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rl_item_board_comment"
            android:layout_toRightOf="@id/rl_item_board_like"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginStart="10dp"
            >

            <ImageView
                android:id="@+id/iv_item_board_comment"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_comment_black_24dp" />

            <TextView
                android:id="@+id/tv_item_board_comment_cnt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="5dp"
                android:layout_toRightOf="@id/iv_item_board_comment"
                android:letterSpacing="-0.01"
                android:lineSpacingExtra="12sp"
                android:textColor="#222222"
                android:textSize="10sp"
                android:text="999+" />

        </RelativeLayout>

        <ImageView
            android:id="@+id/iv_item_board_share"
            android:layout_toRightOf="@id/rl_item_board_comment"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_centerVertical="true"
            android:src="@drawable/ic_share_black_24dp" />

        <ImageView
            android:id="@+id/iv_item_board_menu"
            android:layout_centerVertical="true"
            android:layout_marginStart="10dp"
            android:layout_toRightOf="@id/iv_item_board_share"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_more_vert_black_24dp"/>



    </RelativeLayout>

</LinearLayout>