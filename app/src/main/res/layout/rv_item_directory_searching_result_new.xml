<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:layout_marginTop="9dp"
    android:layout_marginLeft="4.5dp"
    android:layout_marginRight="4.5dp"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="205dp"
    android:background="#ffffff">
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/tv_item_directory_searching_part_stop"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="10sp"
            android:textColor="#f7746b"
            android:letterSpacing="-0.01"
            android:lineSpacingExtra="5sp"
            android:textStyle="bold"
            android:text="소속 |"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="6dp"
            android:layout_alignParentTop="true"
            android:layout_marginTop="11dp"
            />
        <TextView
            android:id="@+id/tv_item_directory_searching_team_name"
            android:layout_below="@id/tv_item_directory_searching_part_stop"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="9sp"
            android:textColor="#525252"
            android:letterSpacing="-0.01"
            android:lineSpacingExtra="6sp"
            android:text="깅스회사는이름길어요
깅스회사는이름길어요"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="6dp"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="10sp"
            android:textColor="#f7746b"
            android:letterSpacing="-0.01"
            android:lineSpacingExtra="5sp"
            android:text="역할 |"
            android:textStyle="bold"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="6dp"
            android:layout_alignParentTop="true"
            android:layout_marginTop="70dp"
            />
        <TextView
            android:id="@+id/tv_item_directory_searching_role"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="9sp"
            android:textColor="#525252"
            android:letterSpacing="-0.01"
            android:lineSpacingExtra="6sp"
            android:text="역할은최대열글자임다"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="6dp"
            android:layout_alignParentTop="true"
            android:layout_marginTop="85dp"
            />


    </RelativeLayout>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/tv_item_directory_searching_available_coworker"
            android:layout_toLeftOf="@id/iv_item_directory_searching_profile_img"
            android:layout_marginRight="6dp"
            android:gravity="center"
            android:background="#f7746b"
            android:layout_width="36dp"
            android:layout_height="15dp"
            android:textSize="8sp"
            android:textColor="#ffffff"
            android:letterSpacing="-0.01"
            android:lineSpacingExtra="8sp"
            android:text="ON"
            android:layout_alignParentTop="true"
            android:layout_marginTop="142.9dp"
            />
        <de.hdodenhof.circleimageview.CircleImageView
            android:layout_alignParentTop="true"
            android:layout_marginTop="131dp"
            android:layout_alignParentRight="true"
            android:layout_marginRight="4dp"
            android:id="@+id/iv_item_directory_searching_profile_img"
            android:layout_width="61dp"
            android:layout_height="61dp"
            android:src="@drawable/invalid_name"/>
        <TextView
            android:layout_below="@+id/tv_item_directory_searching_available_coworker"
            android:layout_toLeftOf="@id/iv_item_directory_searching_profile_img"
            android:layout_alignParentRight="true"
            android:layout_marginRight="92dp"
            android:layout_marginTop="3.1dp"
            android:id="@+id/tv_item_directory_searching_part"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="9sp"
            android:textColor="#999999"
            android:letterSpacing="-0.01"
            android:lineSpacingExtra="6sp"
            android:text="기획" />
        <TextView
            android:id="@+id/tv_item_directory_searching_slash2"
            android:layout_below="@+id/tv_item_directory_searching_available_coworker"
            android:layout_toLeftOf="@id/iv_item_directory_searching_profile_img"
            android:layout_alignParentRight="true"
            android:layout_marginRight="87dp"
            android:layout_marginTop="3.1dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="9sp"
            android:text="/"/>
        <TextView
            android:id="@+id/tv_item_directory_searching_ablity"
            android:layout_below="@+id/tv_item_directory_searching_available_coworker"
            android:layout_toLeftOf="@id/iv_item_directory_searching_profile_img"
            android:layout_alignParentRight="true"
            android:layout_marginRight="68dp"
            android:layout_marginTop="3.1dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="9sp"
            android:letterSpacing="-0.01"
            android:lineSpacingExtra="6sp"
            android:textColor="#999999"
            android:text="설계"/>
        <TextView
            android:id="@+id/tv_item_directory_searching_profile_name"
            android:layout_below="@+id/tv_item_directory_searching_slash2"
            android:layout_toLeftOf="@id/iv_item_directory_searching_profile_img"
            android:layout_alignParentRight="true"
            android:layout_marginRight="68dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="12sp"
            android:textColor="#222222"
            android:letterSpacing="-0.01"
            android:lineSpacingExtra="4sp"
            android:text="이충엽은이름이야"
            />

    </RelativeLayout>

</RelativeLayout>