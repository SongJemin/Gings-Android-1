<?xml version="1.0" encoding="utf-8"?>
    <RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/rl_frag_lounge_main_all"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <RelativeLayout
            android:id="@+id/rl_top_bar_lounge"
            android:layout_width="match_parent"
            android:layout_height="72dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:background="#ffffff">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:gravity="center_horizontal"
                android:letterSpacing="0.05"
                android:lineSpacingExtra="5sp"
                android:text="라운지"
                android:textColor="#000000"
                android:textSize="15sp" />

        </RelativeLayout>

    <LinearLayout
        android:background="#ffffff"
        android:layout_width="191dp"
        android:layout_height="160dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_marginTop="96dp"
        android:layout_marginLeft="26dp"
        android:orientation="vertical"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:textColor="#f7746b"
            android:lineSpacingExtra="2sp"
            android:gravity="center_horizontal"
            android:textStyle="bold"
            android:text="CLUB"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="28dp"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="13sp"
            android:textColor="#000000"
            android:letterSpacing="-0.01"
            android:lineSpacingExtra="7sp"
            android:layout_marginLeft="19.5dp"
            android:layout_marginTop="16dp"
            android:text="관심 있는 클럽에 가입 해
멤버들과 더욱 긴밀한 교류를
경험해 보세요."
            />
    </LinearLayout>

    <RelativeLayout
            android:id="@+id/iv_rv_item_lounge_image"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/rl_top_bar_lounge"
            >

            <android.support.v7.widget.RecyclerView
                android:id="@+id/rv_lounge_frag_lounge_list"

                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true">

            </android.support.v7.widget.RecyclerView>

        </RelativeLayout>

    </RelativeLayout>
