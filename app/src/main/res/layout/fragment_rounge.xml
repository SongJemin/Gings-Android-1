<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    >

    <RelativeLayout
        android:id="@+id/rl_top_bar_lounge"
        android:layout_width="match_parent"
        android:layout_height="72dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:background="#ffffff"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="15sp"
            android:textColor="#000000"
            android:letterSpacing="0.05"
            android:lineSpacingExtra="5sp"
            android:gravity="center_horizontal"
            android:layout_centerInParent="true"
            android:text="라운지" />

    </RelativeLayout>
    <RelativeLayout
        android:layout_marginTop="8dp"
        android:layout_below="@+id/rl_top_bar_lounge"
        android:id="@+id/rl_club_photo_lounge"
        android:layout_width="match_parent"
        android:layout_height="258dp"
        android:background="#ffffff"
        >
        <ImageView
            android:layout_centerInParent="true"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/rounge"
            />
    </RelativeLayout>
    <RelativeLayout
        android:layout_below="@id/rl_club_photo_lounge"
        android:layout_width="match_parent"
        android:layout_height="99dp"
        android:background="#ffffff"
        >
        <TextView
            android:id="@+id/tv_rounge_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:textColor="#b0caea"
            android:lineSpacingExtra="2sp"
            android:gravity="center_horizontal"
            android:layout_marginLeft="17dp"
            android:layout_marginTop="15dp"
            android:text="CLUB"
            />

        <TextView
            android:layout_below="@id/tv_rounge_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="13sp"
            android:textColor="#999999"
            android:letterSpacing="-0.01"
            android:lineSpacingExtra="7sp"
            android:layout_marginLeft="17dp"
            android:layout_marginTop="3dp"
            android:text="관심 있는 클럽에 가입 해
멤버들과 더욱 긴밀한 교류를 해 보세요."
            />
    </RelativeLayout>
</RelativeLayout>