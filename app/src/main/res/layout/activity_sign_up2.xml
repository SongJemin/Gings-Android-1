<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#f9f9f9"
    tools:context=".SignUp2Activity">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:background="#b0caea"
        android:gravity="center"
        android:lineSpacingExtra="6sp"
        android:text="가입정보 입력"
        android:textColor="#ffffff"
        android:textSize="14sp" />

    <RelativeLayout
        android:gravity="center_vertical"
        android:layout_marginTop="40dp"
        android:layout_gravity="center"
        android:background="#ffffff"
        android:layout_width="324dp"
        android:layout_height="48dp">
    <TextView
        android:id="@+id/tv_sign_up2_name"
        android:textSize="14dp"
        android:layout_marginLeft="18dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#000000"
        android:text="이름"/>
  <EditText
      android:id="@+id/et_sign_up2_name"
      android:background="@null"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:hint="깅스"
      android:textSize="14sp"
      android:textColor="#999999"
      android:layout_marginLeft="113dp"
     />
    </RelativeLayout>
    <RelativeLayout
        android:gravity="center_vertical"
        android:layout_marginTop="12dp"
        android:layout_gravity="center"
        android:background="#ffffff"
        android:layout_width="324dp"
        android:layout_height="48dp">
        <TextView
            android:id="@+id/tv_sign_up2_email"
            android:textSize="14dp"
            android:layout_marginLeft="18dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#000000"
            android:text="이메일"/>
        <EditText
            android:id="@+id/et_sign_up2_email"
            android:background="@null"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="gings@gmail.com"
            android:textSize="14sp"
            android:textColor="#999999"
            android:layout_marginLeft="113dp"
            />
    </RelativeLayout>
    <RelativeLayout
        android:gravity="center_vertical"
        android:layout_marginTop="12dp"
        android:layout_gravity="center"
        android:background="#ffffff"
        android:layout_width="324dp"
        android:layout_height="48dp">
        <TextView
            android:id="@+id/tv_sign_up2_pw"
            android:textSize="14dp"
            android:layout_marginLeft="18dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#000000"
            android:text="비밀번호"/>
        <EditText
            android:id="@+id/et_sign_up2_pw"
            android:background="@null"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="숫자,영소문 7글자 조합"
            android:textSize="14sp"
            android:textColor="#999999"
            android:layout_marginLeft="113dp"
            />
    </RelativeLayout>
    <RelativeLayout
        android:gravity="center_vertical"
        android:layout_marginTop="12dp"
        android:layout_gravity="center"
        android:background="#ffffff"
        android:layout_width="324dp"
        android:layout_height="48dp">
        <TextView
            android:id="@+id/tv_sign_up2_re_pw"
            android:textSize="14dp"
            android:layout_marginLeft="18dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#000000"
            android:text="비밀번호 확인"/>
        <EditText
            android:id="@+id/et_sign_up2_re_pw"
            android:background="@null"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="숫자,영소문 7글자 조합"
            android:textSize="14sp"
            android:textColor="#999999"
            android:layout_marginLeft="113dp"
            />
    </RelativeLayout>

    <TextView
        android:layout_marginTop="25dp"
        android:id="@+id/tv_sign_up2_confirm_number_send_message"
        android:layout_gravity="center"
        android:background="#b0caea"
        android:layout_width="324dp"
        android:layout_height="48dp"
        android:textSize="15sp"
        android:textColor="#f6f9fd"
        android:lineSpacingExtra="5sp"
        android:gravity="center"
        android:text="인증번호 전송"/>
</LinearLayout>