<?xml version="1.0" encoding="utf-8"?>
    <RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/rv_item_message"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:background="#ffffff"
        >
        <de.hdodenhof.circleimageview.CircleImageView android:layout_width="43dp"
            android:layout_height="43dp"
            android:src="@mipmap/ic_launcher"
            android:layout_marginTop="17dp"
            android:layout_marginLeft="15dp"
            android:id="@+id/iv_rv_item_message_image"
            />
        <RelativeLayout
            android:layout_centerVertical="true"
            android:layout_marginHorizontal="16dp"
            android:layout_toRightOf="@+id/iv_rv_item_message_image"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <TextView
                        android:id="@+id/tv_rv_item_message_title"
                        android:textColor="#000000"
                        android:textSize="15dp"
                        android:text="깅스"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                    <TextView
                        android:id="@+id/tv_rv_item_message_time"
                        android:text="2018/12/26 03:00"
                        android:textSize="12sp"
                        android:layout_marginLeft="137dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>

                </LinearLayout>
                <TextView
                    android:id="@+id/tv_rv_item_message_content"
                    android:text="점심은 맘스터치 어때용"
                    android:textSize="14dp"
                    android:textColor="#000000"
                    android:layout_marginTop="2dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

            </LinearLayout>
        </RelativeLayout>
    </RelativeLayout>
