<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:id="@+id/rl_image_directory_searching"
    android:layout_marginLeft="4dp"
    android:layout_marginRight="4dp"
    android:layout_marginTop="8dp"
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="168dp"
    android:layout_height="205dp"
    android:background="@drawable/directory_box_selector">
    <TextView
        android:layout_marginTop="11dp"
        android:layout_marginLeft="6dp"
        android:id="@+id/tv_item_searching_team"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="13sp"
        android:textColor="#f7746b"
        android:letterSpacing="-0.01"
        android:lineSpacingExtra="5sp"
        android:fontFamily="@font/noto_bold"
        android:text="소속 |"
        />
    <TextView
        android:fontFamily="@font/noto_medium"
        android:layout_below="@id/tv_item_searching_team"
        android:id="@+id/tv_item_directory_searching_team_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:letterSpacing="-0.01"
        android:lineSpacingExtra="6sp"
        android:textColor="#525252"
        android:textSize="13sp"
        android:layout_marginLeft="5dp"
        android:text="깅스" />
    <TextView
        android:layout_marginTop="16dp"
        android:layout_marginLeft="6dp"
        android:layout_below="@id/tv_item_directory_searching_team_name"
        android:id="@+id/tv_item_searching_part"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="13sp"
        android:textColor="#f7746b"
        android:letterSpacing="-0.01"
        android:lineSpacingExtra="5sp"
        android:fontFamily="@font/noto_bold"
        android:text="역할 |"/>
    <TextView
        android:layout_marginLeft="5dp"
        android:layout_below="@+id/tv_item_searching_part"
        android:id="@+id/tv_item_directory_searching_role"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/noto_medium"
        android:textSize="13sp"
        android:textColor="#525252"
        android:text="PM" />
    <de.hdodenhof.circleimageview.CircleImageView
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_marginBottom="13dp"
        android:layout_marginRight="4dp"
        android:id="@+id/iv_item_directory_searching_profile_img"
        android:layout_width="61dp"
        android:layout_height="61dp"
        android:scaleType="centerCrop"
        android:src="@drawable/img_default"/>

    <RelativeLayout
        android:layout_marginRight="6dp"
        android:layout_width="wrap_content"
        android:layout_height="100dp"
        android:layout_alignParentBottom="true"
        android:layout_toLeftOf="@id/iv_item_directory_searching_profile_img">


        <TextView
            android:id="@+id/tv_item_directory_searching_part"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/noto_regular"
            android:letterSpacing="-0.01"
            android:layout_marginBottom="-15dp"
            android:layout_alignParentRight="true"
            android:layout_above="@id/tv_item_directory_searching_profile_name"
            android:lineSpacingExtra="6sp"
            android:text="기획"
            android:textColor="#999999"
            android:textSize="9sp" />

        <TextView
            android:id="@+id/tv_item_directory_searching_profile_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/noto_bold"
            android:letterSpacing="-0.01"
            android:lineSpacingExtra="4sp"
            android:layout_alignParentRight="true"
            android:layout_marginBottom="5dp"
            android:layout_alignParentBottom="true"
            android:text="이충엽"
            android:textColor="#222222"
            android:textSize="13sp" />



    </RelativeLayout>
</RelativeLayout>